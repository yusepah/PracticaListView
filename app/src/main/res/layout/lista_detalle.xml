<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:id="@+id/lista_detalle"
    android:paddingTop="15dp"
    android:paddingRight="0dp"
    android:paddingBottom="15dp"
    android:paddingLeft="0dp">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ivFoto"
        android:maxHeight="50dp"
        android:maxWidth="50dp"
        android:minHeight="50dp"
        android:minWidth="50dp"
        android:onClick="edit"
        android:scaleType="center"
        android:src="@drawable/ic_launcher"
        android:layout_toEndOf="@+id/ivX"
        android:layout_alignTop="@+id/tvAgenda"
        android:layout_toRightOf="@+id/ivX" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvAgenda"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/ivFoto"
        android:layout_toEndOf="@+id/ivFoto"
        android:textSize="17dp"
        android:paddingLeft="10dp"
        android:paddingTop="5dp"
        android:paddingRight="5dp"
        android:paddingBottom="5dp"
        android:text="@string/nombreHint"
        android:textStyle="bold"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:typeface="monospace" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvMail"
        android:layout_below="@+id/tvAgenda"
        android:layout_toRightOf="@+id/ivFoto"
        android:layout_toEndOf="@+id/ivFoto"
        android:textSize="17dp"
        android:paddingLeft="10dp"
        android:paddingTop="5dp"
        android:paddingRight="5dp"
        android:paddingBottom="5dp"
        android:textStyle="bold"
        android:layout_alignRight="@+id/tvAgenda"
        android:layout_alignEnd="@+id/tvAgenda"
        android:typeface="monospace"
        android:text="eMail" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvTlf"
        android:layout_below="@+id/tvMail"
        android:layout_toRightOf="@+id/ivFoto"
        android:layout_toEndOf="@+id/ivFoto"
        android:textSize="17dp"
        android:paddingLeft="10dp"
        android:paddingTop="5dp"
        android:paddingRight="5dp"
        android:paddingBottom="5dp"
        android:textStyle="bold"
        android:layout_alignRight="@+id/tvMail"
        android:layout_alignEnd="@+id/tvMail"
        android:onClick="llamada"
        android:typeface="monospace"
        android:text="Phone" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ivX"
        android:src="@android:drawable/ic_delete"
        android:maxHeight="7dp"
        android:maxWidth="7dp"
        android:minHeight="7dp"
        android:minWidth="7dp"
        android:onClick="borrar"
        android:visibility="gone" />
</RelativeLayout>